#!/bin/bash

#Unpack .tar.gz

source $OPENSHIFT_CARTRIDGE_SDK_BASH
client_result "installing cutadapt....`date`"
#Descomprimimos aqui
tar -xvzf versions/cutadapt-*/cutadapt-*
mv cutadapt-* cutadapt-install
#Compilamos cutadapt???
#Necesitamos dependencias python-devel y libxslt-devel
cd cutadapt-install
python setup.py build > ../log.txt
cd ..
client_result "install complete....`date`"
#echo "hola" > /dev/null
